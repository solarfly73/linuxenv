. $HOME/.colors

find_git_branch() {
  # Based on: http://stackoverflow.com/a/13003854/170413
  local branch
  git_branch=""
  if branch=$(git rev-parse --abbrev-ref HEAD 2> /dev/null); then
    if [[ "$branch" == "HEAD" ]]; then
      branch=$(git rev-parse --short HEAD)
    fi
    # using git hubflow, shorten "feature/" to "f/" and truncate if hugely long
    branch=$(echo $branch | sed -e 's,features\?/,f/,')
    if [ ${#branch} -ge 20 ]; then
        git_branch="($(echo $branch | cut -b 1-20)..)"
    else
        git_branch="($branch)"
    fi
  fi
}

find_git_dirty() {
    git_dirty=$(git status -s --porcelain | awk 'BEGIN{untracked=0; changed=0; ustr=""; cstr=""}{if (/\?\?/) {++untracked} else {++changed}; if (changed > 0) {cstr=changed}; if (untracked > 0) {ustr="?"};} END{if (untracked + changed > 0) {printf ("[%s%s]*", cstr, ustr)}}')
}

find_curpwd() {
    DIR=$(pwd | sed -e "s!$HOME!~!")
    if [ ${#DIR} -gt 22 ]; then
        curpwd=..${DIR:${#DIR}-18}
    else
        curpwd=$DIR
    fi
}

find_user() {
    if id | grep "uid=0" 2>&1 > /dev/null; then
        prompt_user=0
        prompt_sign="#"
    else
        prompt_user=1
        prompt_sign="\$"
    fi
}


PROMPT_COMMAND="find_git_branch; find_git_dirty; find_curpwd; find_user"

